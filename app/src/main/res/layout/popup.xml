<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:orientation="horizontal"
    android:background="#99E1DF"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/tvTitulo"
        android:textSize="22dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dip"
        android:text="Añadir Contacto " />

    <Button
        android:id="@+id/btnSiguiente"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/etCorreoC"
        android:layout_height="wrap_content"
        android:text="Añadir Contacto" />

    <EditText
        android:id="@+id/etNombreC"
        android:layout_marginTop="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:hint="Nombre" />

    <EditText
        android:id="@+id/etNumeroC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etNombreC"
        android:ems="10"
        android:inputType="number"
        android:hint="Numero" />

    <EditText
        android:id="@+id/etCorreoC"
        android:layout_width="wrap_content"
        android:layout_below="@+id/etNumeroC"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:hint="Correo" />

    <ImageView
        android:id="@+id/ivFotoContacto"
        android:layout_width="wrap_content"
        android:layout_below="@+id/tvTitulo"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_crop" />
</RelativeLayout>